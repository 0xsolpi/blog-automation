{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "LuffyEntityFirstOutput",
  "type": "object",
  "required": ["run_id", "agent", "generated_at", "time_window_hours", "mode", "items"],
  "properties": {
    "run_id": {"type": "string"},
    "agent": {"type": "string", "const": "luffy"},
    "generated_at": {"type": "string"},
    "time_window_hours": {"type": "integer"},
    "mode": {"type": "string", "const": "entity-first"},
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "entity_key", "brand", "model_name", "canonical_product_name",
          "mention_count_24h", "score", "issue_reason", "evidence_links", "source_mix"
        ],
        "properties": {
          "entity_key": {"type": "string"},
          "brand": {"type": "string"},
          "model_name": {"type": "string"},
          "canonical_product_name": {"type": "string"},
          "mention_count_24h": {"type": "integer"},
          "score": {"type": "number"},
          "issue_reason": {"type": "string"},
          "evidence_links": {"type": "array", "items": {"type": "string"}},
          "source_mix": {"type": "object"}
        }
      }
    }
  }
}
